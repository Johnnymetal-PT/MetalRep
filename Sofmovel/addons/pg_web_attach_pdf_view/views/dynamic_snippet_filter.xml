<odoo>
    <record id="dynamic_filter_product_template_only" model="website.snippet.filter">
        <field name="name">Product Templates Only</field>
        <field name="model_name">product.template</field>
        <field name="domain">[('sale_ok', '=', True), ('website_published', '=', True)]</field>
        <field name="sort_field">name</field>
        <field name="sort_order">asc</field>
        <field name="limit">16</field>
        <field name="active">True</field>
    </record>
</odoo>

