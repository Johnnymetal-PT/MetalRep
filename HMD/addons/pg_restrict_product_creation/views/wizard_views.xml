<odoo>
<record id="view_product_forbidden_users_wizard" model="ir.ui.view">
    <field name="name">product.forbidden.users.wizard.form</field>
    <field name="model">product.forbidden.users.wizard</field>
    <field name="arch" type="xml">
        <form string="Gerir Utlizadores Bloqueados">
            <sheet>
                <group>
                    <field name="forbidden_users_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button string="Guardar" name="action_save" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </sheet>
        </form>
    </field>
</record>
</odoo>
