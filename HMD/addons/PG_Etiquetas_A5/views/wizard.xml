<odoo>
    <record id="view_choose_iot_printer_wizard_form" model="ir.ui.view">
        <field name="name">choose.iot.printer.wizard.form</field>
        <field name="model">choose.iot.printer.wizard</field>
        <field name="arch" type="xml">
            <form string="Choose Printer">
                <group>
                    <field name="iot_box_id" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="action_confirm_print" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
