<odoo>
    <data noupdate="1">
        <!-- Add read access for portal users to ir.attachment -->
        <record id="ir_attachment_portal_user_access" model="ir.model.access">
            <field name="name">ir.attachment access for portal user</field>
            <field name="model_id" ref="base.model_ir_attachment"/>
            <field name="group_id" ref="base.group_portal"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>
