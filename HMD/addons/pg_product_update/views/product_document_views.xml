<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_document_form_inherit" model="ir.ui.view">
        <field name="name">product.document.form.inherit</field>
        <field name="model">product.document</field>
        <field name="inherit_id" ref="base.view_product_document_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <label for="tipo_documento" string="Tipo de documento"/>
                    <field name="tipo_documento"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
