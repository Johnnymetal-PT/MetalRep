<templates xml:space="preserve">
    <t t-name="pg_website_attribute_image.ptav_radio_image" t-inherit="sale.ptav_radio" t-inherit-mode="extension">
        <xpath expr="//label/span" position="after">
            <img t-if="ptav.image"
                 t-att-src="'data:image/png;base64,' + ptav.image"
                 class="attr_value_img ms-2"
                 style="width: 60px; height: auto;" />
        </xpath>
    </t>
</templates>

