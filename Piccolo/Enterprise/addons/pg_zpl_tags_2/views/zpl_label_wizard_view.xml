<odoo>
    <record id="view_zpl_label_wizard" model="ir.ui.view">
        <field name="name">zpl.label.wizard.form</field>
        <field name="model">zpl.label.wizard</field>
        <field name="arch" type="xml">
            <form string="Choose Label Size">
                <group>
                    <field name="label_size"/>
                </group>
                <footer>
                    <button name="action_print_zpl2" type="object" string="Print ZPL Pequena" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
