<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the payment.submit_button template -->
    <template id="submit_button_label_customization" inherit_id="payment.submit_button">
        <xpath expr="//button[@name='o_payment_submit_button']" position="attributes">
            <!-- Set a new label for the submit button -->
            <attribute name="t-out">'Realizar Encomenda'</attribute>
        </xpath>
    </template>
</odoo>

