<odoo>
    <record id="view_product_template_update_button" model="ir.ui.view">
        <field name="name">product.template.form.update.button</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="update_product_data" type="object" string="Atualizar Produtos (Pastas)" class="btn-primary" />
            </xpath>
        </field>
    </record>
</odoo>
