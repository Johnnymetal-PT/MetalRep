<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Standalone snippet template definition (no inheritance) -->
    <template id="custom_dynamic_snippet_product_template">
        <section
            data-snippet="s_dynamic_snippet_products"
            data-name="Produtos"
            class="s_dynamic_snippet_products s_dynamic o_colored_level pt0 pb16 s_product_product_horizontal_card_2"
            data-model="product.template"
            data-domain="[('sale_ok','=',True),('website_published','=',True)]"
            data-template-key="website_sale.dynamic_filter_template_product_product_horizontal_card_2"
            data-limit="16"
            data-carousel-interval="5000"
            data-row-per-slide="2"
            data-number-of-elements="2"
            data-number-of-elements-small-devices="1"
            data-arrow-position="bottom"
        >
            <div class="o_not_editable container-fluid">
                <div class="css_non_editable_mode_hidden">
                    <div class="missing_option_warning alert alert-info rounded-0 fade show d-none d-print-none o_default_snippet_text">
                        Your Dynamic Snippet will be displayed here...
                    </div>
                </div>
                <div class="dynamic_snippet_template"/>
            </div>
        </section>
    </template>
</odoo>

